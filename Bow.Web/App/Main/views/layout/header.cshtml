<div class="navbar navbar-inverse navbar-fixed-top" role="navigation" ng-controller="app.views.layout.header as vm">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#/"><img class="logo" src="~/App/Main/images/logo-tipografia.png" alt="Logo Bow"></a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown" ng-repeat="menuItem in vm.menu.items" ng-class="{active: vm.currentMenuName == menuItem.name}">
                    <a ng-href="{{menuItem.url}}" data-toggle="dropdown"><i class="{{menuItem.icon}}" ng-if="menuItem.icon"></i> {{menuItem.displayName}} <b class="caret"></b> </a>
                    <ul class="dropdown-menu">
                        <li ng-repeat="ddMenu in menuItem.items">
                            <a ng-href="{{ddMenu.url}}">{{ddMenu.displayName}}</a>
                        </li>
                    </ul>
                </li>
            </ul>
            
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a id="drop-avatar" class="dropdown-toggle" aria-expanded="false" aria-haspopup="true" data-toggle="dropdown" href="#">
                        <img src="~/App/Main/images/usuarios/hp.jpg" class="img-circle img-responsive img-avatar-menu right-menu" alt="Hozkar Patrick Llano Restrepo" />
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu" aria-labelled-by="drop-avatar" role="menu">
                        <li role="presentation">
                            Hora de entrada <br> 9:46 a.m
                        </li>
                        <li ng-repeat="language in vm.languages" ng-hide="vm.currentLanguage.name == language.name">
                            <a href="/AbpLocalization/ChangeCulture?cultureName={{language.name}}"><i ng-class="language.icon"></i> {{language.displayName}}</a>
                        </li>
                        <li role="presentation">
                            <a href="#" tabindex="-1" role="menuitem"> Cerrar Sesión </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>