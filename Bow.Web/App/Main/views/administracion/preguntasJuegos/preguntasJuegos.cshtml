<div class="container" ng-controller="app.views.administracion.preguntasJuegos as vm">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>@L("")Preguntas de Juegos</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a ng-click="vm.abrirModalNueva(vm.paisId)" title="">@L("")Registrar Nueva Pregunta <span class="glyphicon glyphicon-plus-sign font-size-16"></span></a>
        </div>
        <div class="col-md-6 text-right">
            <p>{{vm.preguntasFrecuentes.length}} @L("")Preguntas</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>@L("")Texto</th>
                        <th>@L("")Nivel</th>
                        <th class="text-center">@L("")Cambiar Estado</th>
                        <th class="text-center">@L("")Editar</th>
                        <th class="text-center">@L("")Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="pregunta in vm.listaPreguntas">
                        <td>
                            {{pregunta.texto}}
                        </td>
                        <td>
                            {{pregunta.nivel}}
                        </td>
                        <td class="text-center">
                            <a ng-click="vm.cambiarEstado(pregunta.id)" title="@L("")Cambiar Estado de la Pregunta"><span class="glyphicon glyphicon-pencil font-size-16"></span></a>
                        </td>
                        <td class="text-center">
                            <a ng-click="vm.abrirModalEditar(pregunta.id)" title="@L("")Editar la pregunta"><span class="glyphicon glyphicon-pencil font-size-16"></span></a>
                        </td>
                        <td class="text-center">
                            <a ng-click="vm.abrirModalEliminar(pregunta.id)" title="@L("")Eliminar la pregunta"><span class="glyphicon glyphicon-trash font-size-16"></span></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
