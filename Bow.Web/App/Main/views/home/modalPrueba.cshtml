<script type="text/ng-template" id="customTemplate.html">
    <a>
        <span bind-html-unsafe="match.model.documento | typeaheadHighlight:query"></span>
        -
        <span bind-html-unsafe="match.model.nombre | typeaheadHighlight:query"></span>
        <span bind-html-unsafe="match.model.apellido | typeaheadHighlight:query"></span>
        <br />
        <span bind-html-unsafe="match.model.oficina | typeaheadHighlight:query"></span>
    </a>
</script>

<div ng-controller="app.views.home.modalPruebaController">
    Parametro: {{parametro}}
    <input type="text" ng-model="selected" class="form-control" typeahead-editable="false"
            typeahead="persona as persona.nombre for persona in filterByNombreAndDocumento(personas, $viewValue)"
            typeahead-template-url="customTemplate.html">
    <br />
    {{selected.id}}
    <button ng-click="mostrarSeleccionado()">Mostrar seleccionado</button>
</div>
